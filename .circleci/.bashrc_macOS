# Don't initialize pyenv if it is already initialized; will get an infinite
# loop. See https://github.com/pyenv/pyenv/issues/264
if [ -n "$PYENV_LOADING" ]; then
    true
else
    if which pyenv > /dev/null 2>&1; then
        export PYENV_LOADING="true"
        eval "$(pyenv init -)"
        unset PYENV_LOADING
    fi
fi
